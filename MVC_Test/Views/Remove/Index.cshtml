@model MVC_Test.Models.RemoveModel
@using Project.Models
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string imgSrc = Model.SaveImage(Model.Item);
    ItemModel item = Model.Item;
}

<h1>Delete Item</h1>
<div class="text-center">
    <h3>Are you sure you want to delete this?</h3>
    <div class="card-deck justify-content-center">
        <div class="card m-3" style="min-width:18rem; max-width:30.5%">
            <div class="card-header">
                <h2>@item.Name</h2>
            </div>
            <div class="card-body" style="min-height:18rem;">
                <img class="card-img-top imageThumbnail" src="@imgSrc" asp-append-version="true">
            </div>
            <div class="card-body">
                <h3>@item.Description</h3>
            </div>
            <div class="card-footer">
                <h2>Estimated Value: @item.Price</h2>
            </div>
        </div>
    </div>
    <div>
        <dl class="row">
        </dl>

        <form asp-action="Index">
            <a asp-controller="Remove" asp-action="Delete" asp-route-Item="@Model.Item" class="btn btn-danger" /> Delete
            <a asp-controller="My_Items" asp-action="Index">   Back to List</a>
        </form>
    </div>
</div>
