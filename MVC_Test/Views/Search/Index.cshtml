@model MVC_Test.Models.SearchModel
@{
    ViewData["Title"] = "Browse";
}




<h1>Search</h1>
<form method="post">
    
    <div class="search-box">
        <input class="search-txt"  type="text" asp-for="@Model.SearchStr" placeholder="Type to search">
        <a class="search-btn">
            <i class="fas fa-search"></i>
        </a>
    </div>
 
</form>






<div class="card-deck">
    @foreach (var item in Model.ViewList)
    {
        var photoPath = @Model.SaveImage(item);
        <div class="card m-3" style="min-width:18rem; max-width:30.5%">
            <div class="card-header">
                <h2>@item.Name</h2>
            </div>
            <div class="card-body" style="min-height:12rem; max-height: 15rem">
                <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true">
            </div>
            <div class="card-body">
                <h3>@item.Description</h3>
            </div>
            <div class="card-footer">
                <h2>Estimated Value: @item.Price</h2>
            </div>

        </div>

    }
</div>